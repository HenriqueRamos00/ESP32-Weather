# Copy to examples/.env (or to the same folder you run compose from) and edit.

ENVIRONMENT=development

ACCESS_TOKEN_EXPIRE_MINUTES=60
SECRET_KEY=change_me_secret_key
API_KEY_HASH_SECRET=change_me_api_key_hash_secret

DATABASE_URL=postgresql://device_management:change_me_db_password@db:5432/device_management

# Optional
PROJECT_NAME=Device Management API
API_V1_STR=/api/v1
TIMEZONE_STR=America/Sao_Paulo

BACKEND_CORS_ORIGINS=[http://localhost:5173,http://localhost:8081]

# Frontend Configuration (for docker-compose only)
# API_URL=/api/v1  # Use relative path when behind reverse proxy
# API_URL=http://api:8000/api/v1  # Use full URL for direct container access